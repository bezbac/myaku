{
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "exactOptionalPropertyTypes": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vitest/importMeta"],
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ]
  },
  "include": ["src/**/*"]
}
